<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInAppGIT.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Entry Placeholder="e-mail" x:Name="emailEntry" Grid.Row="0" Margin="10"/>
        <Entry Placeholder="password" x:Name="passwordEntry" Grid.Row="1" Margin="10"/>

        <Button Text="Sign In" Grid.Row="2" Clicked="SignInUser_Clicked" Margin="30"/>
    </Grid>

</ContentPage>
